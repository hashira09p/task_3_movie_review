<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="card shadow-lg" style="width: 400px;">
    <div class="card-header bg-primary text-white">
      <h5 class="card-title text-center">Add New Movie</h5>
    </div>
    <div class="card-body">
      <%= form_with model: @movie do |form| %>
        <div class="form-group mb-3">
          <%= form.label :title, class: 'font-weight-bold' %>
          <%= form.text_field :title, class: 'form-control' %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :blurb, class: 'font-weight-bold' %>
          <%= form.text_area :blurb, class: 'form-control', rows: 3 %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :date_released, class: 'font-weight-bold' %>
          <%= form.date_select :date_released, class: 'form-control' %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :country_of_origin, class: 'font-weight-bold' %>
          <%= form.text_field :country_of_origin, class: 'form-control' %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :showing_start, class: 'font-weight-bold' %>
          <%= form.datetime_select :showing_start, class: 'form-control' %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :showing_end, class: 'font-weight-bold' %>
          <%= form.datetime_select :showing_end, class: 'form-control' %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :image, class: 'font-weight-bold' %>
          <%= form.file_field :image, class: 'form-control' %>
        </div>

        <div class="form-group text-center">
          <%= form.submit 'Add movie', class: 'btn btn-primary btn-block' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
