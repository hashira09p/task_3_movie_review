<div class="genre-form mb-4">
  <%= form_with url: movies_path, method: :get, local: true do %>
    <div class="d-flex flex-wrap justify-content-center">
      <% genres = ['Action', 'Comedy', 'Drama', 'Horror', 'Fantasy', 'Thriller', 'Romance', 'Documentary', 'Animation', 'Adventure', 'Mystery', 'Musical', 'Biography'] %>
      <% genres.each do |genre| %>
        <%= button_tag genre, type: 'submit', class: 'btn btn-outline-primary m-1 genre-button', name: 'genre', value: genre %>
      <% end %>
    </div>
  <% end %>
</div>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-4">Movies</h1>
    <%= paginate @movies %>
    <div>
      <%= link_to "Add Movie", new_movie_path, class: "btn btn-success ml-3" %>
    </div>
  </div>

  <div class="row">
    <% @movies.each do |movie| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <img src="<%= movie.image.presence || 'https://via.placeholder.com/300x180' %>"
               class="card-img-top"
               alt="<%= movie.title %> Poster">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title text-primary"><%= movie.title %></h5>
            <p class="card-text"><%= movie.blurb %></p>
            <% if movie.average_rating.present? %>
              <p class="card-text"><%= movie.average_rating %></p>
            <% end %>
            <p class="card-text text-muted"><%= movie.genres.pluck(:name).join(', ') %></p>
            <p class="card-text"><strong>Country:</strong> <%= movie.country_of_origin %></p>
            <p class="card-text"><strong>Submitted by:</strong> <%= movie.user&.email %></p>
            <p class="card-text">
              <small class="text-muted">Released on: <%= movie.date_released&.strftime("%B %d, %Y") %></small>
            </p>
            <p class="card-text">
              <small class="text-muted">
                Showing from: <%= movie.showing_start.strftime("%B %d, %Y %H:%M") %> to
                <%= movie.showing_end.strftime("%B %d, %Y %H:%M") %>
              </small>
            </p>
            <div class="mt-auto">
              <div class="d-flex justify-content-between">
                <%= link_to "Reviews", movie_reviews_path(movie), class: "btn btn-primary" %>
                <% if user_signed_in? && movie.user == current_user %>
                  <div>
                    <%= link_to "Edit", edit_movie_path(movie), class: "btn btn-warning mr-1" %>
                    <%= button_to "Delete", movie_path(movie), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
