<h1 class="text-center">New Review</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Submit Your Review</h5>
        </div>
        <div class="card-body">
          <%= form_with model: @review, url: movie_reviews_path, class: 'form-horizontal' do |form| %>
            <div class="form-group">
              <%= form.label :content, class: 'control-label' %>
              <%= form.text_area :content, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= form.label :ratings, class: 'control-label' %>
              <%= form.number_field :ratings, in: 1..5, step: 1, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= form.submit 'Submit Review', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
      <%= link_to 'Back', movie_reviews_path, class: 'btn btn-secondary mt-3' %>
    </div>
  </div>
</div>
