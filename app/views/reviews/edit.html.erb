<h1 class="text-center">Edit A Review</h1>

<div class="card mx-auto" style="width: 300px; margin-top: 20px;">
  <div class="card-body">
    <%= form_with model: @review, url: movie_review_path, class: 'form-horizontal' do |form| %>

      <div class="form-group">
        <%= form.label :content, class: 'control-label' %>
        <%= form.text_area :content, class: 'form-control', rows: 3 %>
      </div>

      <div class="form-group">
        <%= form.label :ratings, class: 'control-label' %>
        <%= form.number_field :ratings, in: 1..5, step: 1, class: 'form-control' %>
      </div>

      <div class="form-group text-center">
        <%= form.submit 'Submit Review', class: 'btn btn-primary' %>
      </div>

    <% end %>

    <%= link_to 'Back', movie_reviews_path, class: 'btn btn-secondary btn-block' %>
  </div>
</div>
